{
  "name": "source-code",
  "version": "1.0.0",
  "description": "记录平时开发或学习中书写的案例源码和介绍。",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "live-server --host=localhost --port=3000 --open=www",
    "htmlhint": "htmlhint src/**/*.html",
    "stylelint": "stylelint '**/*.css' '**/*.less'",
    "stylelint:fix": "npm run stylelint -- --fix",
    "lint": "eslint . --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --check '**/*.{html,css,less,md,json}'",
    "prettier:fix": "prettier --write '*.{html,css,less,md,json}'",
    "markdownlint": "markdownlint **/*.md --ignore node_modules",
    "markdownlint:fix": "markdownlint **/*.md --fix --ignore node_modules",
    "commit": "git cz",
    "deploy": "gh-pages -d www"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dongwanhong/source-code.git"
  },
  "keywords": [],
  "author": "Dong WanHong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dongwanhong/source-code/issues"
  },
  "homepage": "https://github.com/dongwanhong/source-code/slide-unlock",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "babel-eslint": "^10.0.3",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "gh-pages": "^2.1.1",
    "htmlhint": "^0.11.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "live-server": "^1.2.1",
    "markdownlint": "^0.17.2",
    "markdownlint-cli": "^0.19.0",
    "prettier": "1.19.0",
    "stylelint": "^11.1.1",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "npx commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{html}": [
      "npm run htmlhint",
      "git add"
    ],
    "*.{less,css}": [
      "npm run stylelint",
      "git add"
    ],
    "*.{js}": [
      "npm run lint",
      "git add"
    ],
    "*.{md}": [
      "npm run markdownlint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
